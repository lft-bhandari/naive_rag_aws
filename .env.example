# Copy this file to .env and fill in your values
# cp .env.example .env

# ── Qdrant ────────────────────────────────────────────────────────────────────
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=rag_documents

# ── Models (HuggingFace IDs) ──────────────────────────────────────────────────
EMBED_MODEL=BAAI/bge-small-en-v1.5
LLM_MODEL=Qwen/Qwen2.5-0.5B-Instruct

# ── RAG parameters ────────────────────────────────────────────────────────────
CHUNK_SIZE=512
CHUNK_OVERLAP=64
TOP_K=5
MAX_NEW_TOKENS=512

# ── Frontend ──────────────────────────────────────────────────────────────────
API_BASE_URL=http://backend:8000